<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bookstore.controller.RegisterController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Register New Account" style="-fx-font-size: 24px;"/>
    
    <TextField fx:id="usernameField" promptText="Username"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button text="Register" onAction="#handleRegister"/>
        <Button text="Back to Login" onAction="#handleBackToLogin"/>
    </HBox>
    
    <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
</VBox> 