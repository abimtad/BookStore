<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bookstore.controller.AdminDashboardController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Admin Dashboard" style="-fx-font-size: 24px;"/>
    <Label fx:id="messageLabel" style="-fx-text-fill: blue;"/>
    
    <Button text="Manage Books" onAction="#handleManageBooks"/>
    <Button text="Manage Users" onAction="#handleManageUsers"/>
    <Button text="Logout" onAction="#handleLogout"/>
</VBox> 